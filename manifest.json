{
  "manifest_version": 2,

  "name": "Tabber",
  "description": "This extension opens tabs in your browser when you need them",
  "version": "1.0",

  "browser_action": {
    "default_icon": "milliontabs.png",
    "default_popup": "popup.html",
    "default_title": "Need this later?"
  },

  "background": {
    "scripts": ["scripts/addtab.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "alarms",
    "tabs"
  ]
}
